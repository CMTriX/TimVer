<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Dark.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Color x:Key="{x:Static adonisUi:Colors.Layer0BackgroundColor}">#1e1e1e</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Layer1BackgroundColor}">#2a2b34</Color>
    <Color x:Key="{x:Static adonisUi:Colors.ForegroundColor}">#9e9e9e</Color>
</ResourceDictionary>