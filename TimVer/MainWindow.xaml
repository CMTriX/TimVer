<Window
    x:Class="TimVer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TimVer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TimVer"
    Width="650"
    Height="400"
    BorderThickness="1"
    Closing="Window_Closing"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Window.Resources />

    <Grid Background="#e6e6e6">
        <DockPanel
            Width="120"
            Margin="10,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Background="White"
            LastChildFill="True">
            <Button
                Click="BtnClick_Page1"
                Content="Windows Info"
                DockPanel.Dock="Top"
                Style="{DynamicResource BtnStyle1}" />
            <Button
                Click="BtnClick_Page2"
                Content="Computer Info"
                DockPanel.Dock="Top"
                Style="{DynamicResource BtnStyle1}" />
            <Button
                Click="BtnClick_Page3"
                Content="History"
                DockPanel.Dock="Top"
                Style="{DynamicResource BtnStyle1}" />
            <Button
                VerticalAlignment="Bottom"
                Click="BtnClick_Page5"
                Content="About"
                DockPanel.Dock="Bottom"
                Margin="0,5,0,5"
                Style="{DynamicResource BtnStyle1}" />
            <Button
                VerticalAlignment="Bottom"
                Click="BtnClick_Page4"
                Content="Options"
                DockPanel.Dock="Bottom"
                Style="{DynamicResource BtnStyle1}" />
        </DockPanel>
        <Frame
            x:Name="MainFrame"
            Margin="140,10,10,10"
            Background="White"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
