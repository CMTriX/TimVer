<Window
    x:Class="TimVer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TimVer"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TimVer"
    Width="400"
    Background="{DynamicResource MaterialDesignPaper}"
    Closing="Window_Closing"
    FontSize="14"
    MouseWheel="Window_MouseWheel"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <materialDesign:DialogHost
        CloseOnClickAway="True"
        DialogTheme="Inherit"
        Identifier="dh1">
        <Grid x:Name="MainGrid">
            <TabControl
                x:Name="tcMain"
                materialDesign:ColorZoneAssist.Mode="Standard"
                materialDesign:NavigationRailAssist.ShowSelectionBackground="False"
                materialDesign:ShadowAssist.ShadowDepth="Depth2"
                FontWeight="Normal"
                SelectionChanged="TcMain_SelectionChanged"
                SnapsToDevicePixels="True"
                Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                TabStripPlacement="Left">

                <!--#region Windows tab-->
                <TabItem
                    x:Name="tabWinInfo"
                    Width="80">
                    <TabItem.Header>
                        <StackPanel>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="MicrosoftWindows" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Windows" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <!--#endregion-->

                <!--#region Computer tab-->
                <TabItem
                    x:Name="tabCompInfo"
                    Width="80">
                    <TabItem.Header>
                        <StackPanel>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="ComputerClassic" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Computer" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <!--#endregion-->

                <!--#region History tab-->
                <TabItem
                    x:Name="tabHistory"
                    Width="80">
                    <TabItem.Header>
                        <StackPanel>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="History" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="History" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <!--#endregion-->

                <TabItem
                    x:Name="tabSettings"
                    Width="80">
                    <TabItem.Header>
                        <StackPanel>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="GearOutline" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Settings" />
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                        <local:Page4 />
                    </TabItem.Content>
                </TabItem>

                <!--#region About tab-->
                <TabItem
                    x:Name="tabAbout"
                    Width="80">
                    <TabItem.Header>
                        <StackPanel>
                            <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                HorizontalAlignment="Center"
                                Kind="InformationVariant" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="About" />
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                        <local:Page5 />
                    </TabItem.Content>
                </TabItem>
                <!--#endregion-->

            </TabControl>
        </Grid>
    </materialDesign:DialogHost>
</Window>
