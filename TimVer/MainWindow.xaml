<Window x:Class="TimVer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Properties="clr-namespace:TimVer.Properties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TimVer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:TimVer.ViewModels"
    xmlns:views="clr-namespace:TimVer.Views"
    mc:Ignorable="d"
    Title="Tim's WinVer"
    Width="350"
    Closing="Window_Closing"
    FontFamily="Segoe UI"
    FontSize="15"
    FontWeight="Regular"
    KeyUp="Window_Keydown"
    Left="{Binding WindowLeft, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}"
    ResizeMode="CanMinimize"
    SizeToContent="WidthAndHeight"
    Top="{Binding WindowTop, Source={x:Static Properties:Settings.Default}, Mode=TwoWay}">

    <!--#region Window Resources-->
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:Page1ViewModel}">
            <views:Page1View DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:Page2ViewModel}">
            <views:Page2View DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:Page3ViewModel}">
            <views:Page3View DataContext="{Binding}" />
        </DataTemplate>
    </Window.Resources>
    <!--#endregion-->

    <Grid>
        <!--#region Row & Column definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Menu-->
        <DockPanel
            Grid.Row="0"
            Grid.Column="0"
            LastChildFill="True">
            <Menu
                Height="28"
                Padding="3,2"
                DockPanel.Dock="Top"
                FontSize="14">
                <MenuItem Header="_File">
                    <MenuItem
                        Click="CopyButton_Click"
                        Header="Copy to Clipboard"
                        InputGestureText="Ctrl+C" />
                    <Separator />
                    <MenuItem
                        Click="ExitButton_Click"
                        Header="Exit"
                        InputGestureText="Esc" />
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem
                        Click="Page1_Click"
                        Header="Page 1"
                        InputGestureText="Ctrl+1" />
                    <MenuItem
                        Click="Page2_Click"
                        Header="Page 2"
                        InputGestureText="Ctrl+2" />
                    <MenuItem
                        Click="Page3_Click"
                        Header="Page 3"
                        InputGestureText="Ctrl+3" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Click="AboutButton_Click" Header="About" />
                    <MenuItem Click="ReadMe_Click" Header="View ReadMe" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <!--#endregion-->

        <ContentControl Grid.Row="1" Content="{Binding}" />
    </Grid>
</Window>